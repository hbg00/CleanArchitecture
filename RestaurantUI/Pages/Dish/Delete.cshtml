﻿
@page "/Restaurant/{restaurantId:int}/Dish/Delete/{id:int}"
@model RestaurantUI.Pages.Dish.DeleteModel

@{
    ViewData["Title"] = "Delete Dish";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Dish</h2>

<h3>Are you sure you want to delete this dish?</h3>
<div>
    <h4>Dish</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.DishVM.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.DishVM.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.DishVM.Price</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="DishVM.Id" />
        <input type="hidden" asp-for="DishVM.RestaurantId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Dish/Index" asp-route-restaurantId="@Model.RestaurantId" class="btn btn-secondary">Back to List</a>
    </form>
</div>